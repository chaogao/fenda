.detail-repeat-main
  .question-detail
    padding: 10px;
    background: white;
    position: relative;
    margin-bottom: 10px;

    .common-user-head
      display: inline-block;
      vertical-align: middle;

    .user-name
      margin-left: 5px;

    .question-content
      margin: 10px 0;

    .question-time
      font-size: 12px;
      color: gray_dark;

    .price
      position: absolute;
      right: 15px;
      top: 15px;
      color: orange_dark;