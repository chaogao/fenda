.my-main
  padding: 10px;
  margin-bottom: 10px;
  background: #fff;

  .my-user
    position: relative;

    .action-edit
      position: absolute;
      right: 5px;
      top: 0px;
      width: 30px;
      text-align: center;
      color: #999;

      i
        font-size: 18px;
        margin-bottom: 5px;

    .user-head
      display: block;
      width: 50px;
      height: 50px;
      border: 1px solid #dfdfdf;
      border-radius: 25px;
      margin: 0 auto 10px auto;
      background: url('http://cc.cocimg.com/api/uploads/20150828/1440724410882023.jpg') no-repeat;
      background-size: cover;

    .user-name
      margin-bottom: 10px;
      display: block;
      text-align: center;

    .user-desc
      margin-bottom: 10px;
      display: block;
      color: #999;
      text-align: center;

  .my-detail
    color: #999;

    p
      margin-bottom: 5px;

.my-action-list
  margin-bottom: 10px;
  background: #fff;
  
  ul
    li a
      display: block;
      position: relative;
      border-bottom: 1px solid #e5e5e5;
      color: #333;
      padding: 15px 10px;

      i
        font-size: 16px;
        margin-right: 8px;
        color: #999;

      &:after
        content: '';
        position: absolute;
        right: 0;
        top: 13px;
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        content: "\F105";
        font-size: 18px;
        right: 10px;
        color: #999;

