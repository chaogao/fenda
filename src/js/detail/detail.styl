@import '../lib/mixin';

.detail-main
  .question-detail
    padding: 10px;
    background: white;
    position: relative;
    margin-bottom: 10px;

    .common-user-head
      display: inline-block;
      vertical-align: middle;

    .user-name
      margin-left: 5px;

    .question-content
      margin: 10px 0;

    .question-time
      font-size: 12px;
      color: gray_dark;

    .price
      position: absolute;
      right: 15px;
      top: 15px;
      color: orange_dark;

  .repeat-user
    .user-link
      background: white;
      padding: 10px;
      margin-bottom: 10px;
      display: -webkit-box;
      position: relative;

      &:after
        content: '';
        position: absolute;
        right: 0;
        top: 20px;
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: inherit;
        text-rendering: auto;
        -webkit-font-smoothing: antialiased;
        content: "\F105";
        font-size: 18px;
        right: 10px;
        color: #999;

      .common-user-head
        margin-top: 5px;

      .other-info
        display: block;
        padding-left: 10px;
        -webkit-box-flex: 1;

        p
          margin-bottom: 10px;
          color: #333;

          &:last-child
            margin-bottom: 0;

        .listen-count,
        .repeat-description
          font-size: 12px;
          color: gray_dark;
       