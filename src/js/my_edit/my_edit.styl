@import '../lib/mixin';

.my-edit-main
  .my-user
    padding: 10px;
    position: relative;

    .action-edit
      position: absolute;
      right: 5px;
      top: 0px;
      width: 30px;
      text-align: center;
      color: #999;

      i
        font-size: 18px;
        margin-bottom: 5px;

    .user-head
      display: block;
      width: 50px;
      height: 50px;
      border-radius: 25px;
      margin: 0 auto 10px auto;
      background: url('http://cc.cocimg.com/api/uploads/20150828/1440724410882023.jpg') no-repeat;
      background-size: cover;

    .user-name
      margin-bottom: 10px;
      display: block;
      text-align: center;

    .user-desc
      margin-bottom: 10px;
      display: block;
      color: gray_dark;
      text-align: center;

  .edit-detail
    margin-bottom: 10px;
    li
      padding: 10px;
      margin-bottom: 10px;
      background: #fff;

      p
        margin-bottom: 5px;

      textarea
        width: 100%;
        height: 50px;
        border: none;

      .pay-count
        width: 70px;
        height: 30px;
        background: gray_light;
        border: none;
        padding-left: 5px;

  .edit-action
    text-align: center;










