.repeat-list
  .repeat-item
    background: #fff;
    padding: 10px;
    margin-bottom: 10px;

    .repeat-ask
      display: -webkit-box;
      margin-bottom: 10px;

      .ask-user
        display: block;
        width: 30px;
        height: 30px;
        border: 1px solid #dfdfdf;
        border-radius: 15px;
        background: url('http://cc.cocimg.com/api/uploads/20150828/1440724417548150.jpg') no-repeat;
        background-size: cover;

      .ask-content
        display: block;
        padding-left: 10px;
        -webkit-box-flex: 1;

        .ask-price
          margin-top: 5px;
          color: #f85f48;
          font-size: 16px;

    .repeat-content
      display: -webkit-box;
      margin-bottom: 10px;

      .repeat-user
        display: block;
        width: 30px;
        height: 30px;
        border: 1px solid #dfdfdf;
        border-radius: 15px;
        background: url('http://cc.cocimg.com/api/uploads/20150828/1440724410882023.jpg') no-repeat;
        background-size: cover;

      .repeat-content
        display: block;
        padding-left: 10px;
        -webkit-box-flex: 1;

        .action-listen
          display: inline-block;
          padding: 10px;
          text-align: center;
          color: #fff;
          background: #1fa67a;
          border-radius: 15px;

          i
            float: left;
            font-size: 18px;
            margin-top: -1px;

        .repeat-time
          color: #999;

    .extend-content
      color: #999;
      overflow: hidden;
      padding-left: 40px;

      .extend-time
        float: left;

      .extend-count
        float: right;